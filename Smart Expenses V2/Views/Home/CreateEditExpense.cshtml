@{
    ViewData["Title"] = "Create or Edit Expenses";
}

@model Smart_Expenses_V2.Models.Expenses //this is for the model binding to call the model Expenses


<div class="text-center">
    <h1 class="display-4">Create or Edit an Expenses</h1>

</div>


<!-- This is the form for creating or editing an expense -->
<form asp-action="CreateEditExpenseform" asp-controller="Home">  

    <label input class="mt-4">Id</label>
    <input class="form-control" type="text" type ="number" placeholder="0" asp-for="Id"/>


    <label input class="mt-4">Value $</label>
    <input class="form-control" type="text" type="number" placeholder="0" asp-for="Value" step="0.01" />

    <label input class="mt-4">Id</label>
    <input class="form-control" type="text" type="text" placeholder="Add a descriptions" asp-for="Description" />


    <button type="submit" class="btn btn-primary mt-4">Ok</button>

</form>